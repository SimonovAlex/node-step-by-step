{
  "name": "node-step-by-step",
  "version": "1.0.0",
  "description": "simple nodejs express web application architecture example",
  "main": "app.js",
  "scripts": {
    "build": "npm run clean && npm run lint && echo Using TypeScript && tsc --version && tsc --pretty",
    "clean": "rimraf dist",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "start": "npm run build && npm run serve",
    "start:dev": "npm run build && npm run serve:dev",
    "serve": "set DEBUG=app*&&node ./dist/app.js",
    "serve:dev": "set DEBUG=app*&& nodemon --inspect ./dist/app.js",
    "test": "set NODE_ENV=test&&set DEBUG=app*&&mocha --timeout 999999 --recursive dist/tests/",
    "test:ts": "set NODE_ENV=test&&set DEBUG=app*&&mocha --timeout 999999 --require ts-node/register src/tests/**/*.test.ts",
    "watch": "npm run build -- --watch"
  },
  "keywords": [
    "nodejs",
    "express",
    "architecture"
  ],
  "author": "mkryuk@gmail.com",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "debug": "^3.1.0",
    "expect": "^22.4.3",
    "express": "^4.16.3",
    "http-errors": "^1.6.3",
    "inversify": "^4.13.0",
    "inversify-express-utils": "^6.0.0",
    "jsonwebtoken": "^8.2.1",
    "mocha": "^5.1.1",
    "mongoose": "^5.1.0",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0",
    "ts-node": "^6.0.4",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.3",
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "0.0.30",
    "@types/expect": "^1.20.3",
    "@types/express": "^4.11.0",
    "@types/http-errors": "^1.6.1",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/mocha": "^5.2.0",
    "@types/mongoose": "^4.7.32",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.3.0",
    "@types/passport": "^0.4.2",
    "@types/passport-http-bearer": "^1.0.30",
    "@types/passport-local": "^1.0.30",
    "@types/supertest": "^2.0.2",
    "@types/uuid": "^3.4.3",
    "nodemon": "^1.17.5"
  }
}
